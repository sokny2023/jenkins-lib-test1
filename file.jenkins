pipeline {
    agent any
    
    stages { 
        stage('Build Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-access', passwordVariable: 'pass', usernameVariable: 'user')]) {
                        sh '''
                        docker login -u $user -p $pass
                        '''
                    }
                }
            }
        }  
    }
}